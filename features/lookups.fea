@vocalic_liquids = [gjvR];
@matra_vocalic_liquids = [gjmvR];

lookup CONTEXTUAL_ra_to_vocalic_liquid {
  sub gjRA' gjmvR  by gjvR;
  # sub gjRA' gjmvRR by gjvRR;
  # sub gjRA' gjmvL  by gjvL;
  # sub gjRA' gjmvLL by gjvLL;
