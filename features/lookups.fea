@matra_i_variants = [gjmI gjmI.tall];
@matra_i_reph_variants = [gjmI_Reph gjmI_Reph.tall];
@matra_i_reph_anusvara_variants = [gjmI_Reph_Anusvara gjmI_Reph_Anusvara.tall];

@BASES_FOR_MATRA_I = [
  gjKA gjNGA gjCHA gjJA gjJHA gjTTA gjTTHA gjDDA gjDDHA gjDA gjPHA gjRA gjHA
  gjK_RA gjNG_RA gjCH_RA gjJ_RA gjJH_RA gjTT_RA gjTTH_RA gjDD_RA gjDDH_RA gjD_RA gjPH_RA gjH_RA
  gjTT_TTA gjTT_TTHA gjTT_VA gjTTH_TTHA gjDD_DDA gjDD_DDHA gjDD_VA gjDDH_DDHA gjD_GHA gjD_DA gjD_DHA gjD_NA gjD_BHA gjD_VA gjH_NA gjH_VA
  gjDHA gjDH_RA gjD_YA
];

lookup abvs_matrai_step_A {
  sub @matra_i_variants' @BASES_FOR_MATRA_I gjReph by @matra_i_reph_variants;
  sub @matra_i_variants' @BASES_FOR_MATRA_I gjReph_Anusvara by @matra_i_reph_anusvara_variants;
} abvs_matrai_step_A;

lookup abvs_matrai_step_B {
  sub
    [@matra_i_reph_variants @matra_i_reph_anusvara_variants]
    @BASES_FOR_MATRA_I
    [gjReph gjReph_Anusvara]'
    by
    gjNull;
} abvs_matrai_step_B;


