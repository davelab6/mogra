# Localization Forms
# ------------------

feature locl {

  script latn;

    language ROM exclude_dflt;
      lookup locl_ROM {
        sub [Scedilla     scedilla     Tcedilla     tcedilla]
        by  [Scommaaccent scommaaccent Tcommaaccent tcommaaccent];
      } locl_ROM;

    language MOL exclude_dflt;
      lookup locl_ROM;

    # language TRK exclude_dflt;
